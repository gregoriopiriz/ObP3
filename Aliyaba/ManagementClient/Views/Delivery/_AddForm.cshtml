
@{ Layout = null;}
@model Common.DTOs.DTO_Delivery

@using (Html.BeginForm("AddDelivery", "Delivery"))
{
    @Html.LabelFor(model => model.DepartureDate, "Fecha de Salida")
    @Html.EditorFor(model => model.DepartureDate, new { htmlAttributes = new { @class = "input form-control bg-secondary text-light" } })
    @Html.LabelFor(model => model.CommitDate, "Fecha de entrega")
    @Html.EditorFor(model => model.CommitDate, new { htmlAttributes = new { @class = "input form-control bg-secondary text-light" } })
    @Html.LabelFor(model => model.VehiclePlate, "Matrícula del Vehículo")
    @Html.EditorFor(model => model.VehiclePlate, new { htmlAttributes = new { @class = "input form-control bg-secondary text-light" } })
    @Html.LabelFor(model => model.EmployeeID, "Empleado ID")
    @Html.EditorFor(model => model.EmployeeID, new { htmlAttributes = new { @class = "input form-control bg-secondary text-light" } })
    <button class="btn btn-primary mt-3" type="submit" id="btn_Validar" disabled>Agregar</button>
    <br />
    <i id="labelError" class="text-danger hidden">
        Debe completar todos los campos antes de Agregar
    </i>
}

@Scripts.Render("~/Vendor/Js")

<script>
    $('.input').keyup(function () {
        var count = $('.input').length;
        var aux = 0;
        $('.input').each(function () {
            if ($(this).val().length > 0) {
                aux += 1
            }
        })

        if (count != aux) {
            $('#labelError').show();
            $('#btn_Validar').attr('disabled', true);
        }
        else {
            $('#labelError').hide();
            $('#btn_Validar').removeAttr("disabled");
        }
    });
</script>