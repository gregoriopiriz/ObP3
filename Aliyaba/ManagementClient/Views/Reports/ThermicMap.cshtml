    function initMap() {
        var bounds = new google.maps.LatLngBounds();

        var markers = [];
        var heatmapData = [];

        function setMapOnAll(map) {
            for (var i = 0; i < markers.length; i++) {
                markers[i].setMap(map);
            }
        }
        function clearMarkers() {
            setMapOnAll(null);
        }
        function deleteMarkers() {
            clearMarkers();
            markers = [];
        }
        function showMarkers() {
            setMapOnAll(map);
        }
        $('document').ready(function () {
            $('.location').each(function () {
                var l = {};
                l.lat = $(this).data('lat');
                l.lng = $(this).data('lng');
                l.id = $(this).data('id');
                l.orderId = $(this).data('oID');
                bounds.extend(l);
                heatmapData.push(new google.maps.LatLng(l.lat, l.lng))
            })
            showMarkers()
        })

        var location = { lat: -34.908377, lng: -54.958371 };
        map = new google.maps.Map(document.getElementById('map'), {
            center: location,
            zoom: 16,
            styles: styles,
            disableDefaultUI: true
        });
        map.fitBounds(bounds);
        var heatmap = new google.maps.visualization.HeatmapLayer({
            data: heatmapData,
            radius: 50
        });
        heatmap.setMap(map);

        function addMarker(location) {
            var marker = new google.maps.Marker({
                position: location,
                map: map,
                animation: google.maps.Animation.DROP
            });

            var contentString = generateContent(location);

            marker.addListener("click", function () {
                infowindow.open(map, marker);
            });

            markers.push(marker);

            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });
        }

        function generateContent(location) {
            var JQID = "#" + location.id;
            var content = $(JQID).html();
            return content;
        }

