
@{ Layout = null; }
@{
    <div class="row mt-4">
        @{
            if (@ViewBag.Products.Count >= 5)
            {
                for (int i = 0; i < 5; i++)
                {
                    <div class="col-lg-3 col-md-4 mb-4 my-3">
                        <div class="card h-100 shadow">
                            <img class="card-img-top mx-auto" src="@Url.Action("GetImageByProductCode", "Product", new { ProductCode = ViewBag.Products[i].Code })">
                            <div class="card-body">
                                <h2>
                                    #@i
                                </h2>
                                <div class="row">
                                    <div class="col">
                                        <h4 class="card-title">
                                            @ViewBag.Products[i].Name
                                        </h4>
                                        <h5>Código: @ViewBag.Products[i].Code</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                for (int i = 0; i < @ViewBag.Products.Count; i++)
                {
                    int pos = i + 1;
                    <div class="col-lg-3 col-md-4 mb-4 my-3">
                        <div class="card h-100 shadow">
                            <img class="card-img-top mx-auto" src="@Url.Action("GetImageByProductCode", "Product", new { ProductCode = ViewBag.Products[i].Code })">
                            <div class="card-body">
                                <h2>
                                    #@pos
                                </h2>
                                <div class="row">
                                    <div class="col">
                                        <h4 class="card-title">
                                            @ViewBag.Products[i].Name
                                        </h4>
                                        <h5>Código: @ViewBag.Products[i].Code</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
}
